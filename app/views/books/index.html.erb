<div class="jumbotron">
  <h1>
    "Busquem conhecimento"
  </h1>

  <p class="lead">Et Bilu</p>
</div>

<div class="row marketing">
  <% cache 'books-index' do %>
    <% @books.in_groups_of(3).each do |books| %>
      <div class="row">
        <% books.reject(&:nil?).each do |book| %>
          <div class="col-sm-4">
            <div class="thumbnail">
              <%= image_tag book_image_url(book), alt: book %>
              <div class="caption">
                <h3><%= book %></h3>
                <p><%= book.authors %>.</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
